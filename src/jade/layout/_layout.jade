- var minExt = '.min'
if devMode
  - minExt = ''
doctype html
html(lang="ja")
  block vars
  head
    meta(charset="utf-8")
    meta(content="IE=edge,chrome=1", http-equiv="X-UA-Compatible")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(href="lib/css/common.css", rel="stylesheet")
    title #{page.title}
  body(class="#{page.slug}")
    // main content
    block content
    each js in page.js
      script(src="lib/js/#{js}#{minExt}.js")
    if page.slug === 'easing'
      script.
        (function() {
          var easeOutBounce = function (t, b, c, d) {
            if ((t/=d) < (1/2.75)) {
              return c*(7.5625*t*t) + b;
            } else if (t < (2/2.75)) {
              return c*(7.5625*(t-=(1.5/2.75))*t + .75) + b;
            } else if (t < (2.5/2.75)) {
              return c*(7.5625*(t-=(2.25/2.75))*t + .9375) + b;
            } else {
              return c*(7.5625*(t-=(2.625/2.75))*t + .984375) + b;
            }
          };
          var smoothscroll = SERENDIP.smoothscroll;
          smoothscroll.setEasing(easeOutBounce);
          smoothscroll.setSpeed(3000);
        })();
